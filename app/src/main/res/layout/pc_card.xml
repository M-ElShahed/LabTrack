<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/pcCardView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/darkTextColor"
        >

        <RelativeLayout
            android:id="@+id/pcCard"
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:background="@color/backGroundColor"
            >

            <Button
                android:id="@+id/pcImgText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingEnd="10dp"
                android:background="@drawable/ic_computer_monitor_and_mouse"
                android:text="1"
                android:paddingBottom="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:textColor="@drawable/text_color"
                android:textSize="60sp"
                />
            <Button
                android:id="@+id/statuesButton"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/correct"
                android:text="All is good"
                android:textSize="8sp"
                android:textColor="@drawable/text_color"
                android:background="@android:color/transparent"
                android:clickable="false"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/reportButton"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/pcImgText"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_cogwheels_variant_with_wrench_tool"
                android:text="@string/report_a_problem" />

            <TextView
                android:id="@+id/btext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reportButton"
                android:layout_marginEnd="4dp"
                android:layout_alignParentEnd="true"
                android:text="@string/report_a_problem"
                android:textColor="@color/hintColor"
                android:textSize="8sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>



